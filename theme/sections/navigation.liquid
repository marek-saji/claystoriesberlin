<nav aria-label="Main navigation" class="nav">
  {%- if linklists.main.links.size > 0 -%}
    <ul class="nav__list">
      {%- for link in linklists.main.links -%}
        <li class="nav__item">
          <a
            href="{{ link.url }}"
            {% if link.active %}aria-current="page"{% endif %}
            class="nav__link"
          >
            {%- if link.object and link.object.metafields.custom.menu_label -%}
              {{ link.object.metafields.custom.menu_label }}
            {%- else -%}
              {{ link.title }}
            {%- endif -%}
          </a>
        </li>
      {%- endfor -%}
    </ul>
  {%- endif -%}
</nav>

{% schema %}
{
  "name": "Navigation",
  "settings": []
}
{% endschema %}
